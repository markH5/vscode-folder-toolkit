{
    // https://dprint.dev/config/
    "excludes": [
        "./data",
        "./pack/**",
        "**/dist",
        "**/node_modules",
        "**/out/",
        "**/scripts/",
        "libs/",
        "resource/",
        "bin-release/",
        "doc_build/",
    ],
    "includes": [
        "**/*.{ts,tsx,js,jsx,cjs,mjs,json,toml,html,md,mdx,css}",
    ],
    "incremental": true,
    "indentWidth": 4,
    "lineWidth": 200,
    "newLineKind": "lf",
    "plugins": [
        //   "https://plugins.dprint.dev/dockerfile-0.3.2.wasm",
        "https://plugins.dprint.dev/json-0.19.4.wasm",
        "https://plugins.dprint.dev/markdown-0.17.8.wasm",
        "https://plugins.dprint.dev/toml-0.6.4.wasm",
        "https://plugins.dprint.dev/typescript-0.93.4.wasm",
        "https://plugins.dprint.dev/g-plane/malva-v0.11.1.wasm", // css
    ],
    // https://dprint.dev/plugins/typescript/config/
    "typescript": {
        "binaryExpression.operatorPosition": "nextLine",
        "importDeclaration.preferSingleLine": false, // keep eslint <-> dprint friendly
        "quoteStyle": "alwaysSingle",
        "semiColons": "prefer",
        "typeLiteral.separatorKind.multiLine": "comma",
        "typeLiteral.separatorKind.singleLine": "comma",
        "jsx.quoteStyle": "preferDouble",
        // 跟 eslint 衝突了
        "module.sortImportDeclarations": "maintain",
        //  "exportDeclaration.sortTypeOnlyExports": "none",
    },
    // https://dprint.dev/plugins/json/
    "json": {
        "trailingCommas": "jsonc",
        "jsonTrailingCommaFiles": [
            "launch.json",
            "tasks.json",
            "settings.json",
            "tsconfig.json",
            "dprint.json",
        ],
    },
    /**
     * css format
     * https://plugins.dprint.dev/g-plane/malva/latest/schema.json.
     * https://dprint.dev/plugins/malva/config/
     */
    "malva": {
        "useTabs": false,
        "quotes": "preferDouble",
    },
}
